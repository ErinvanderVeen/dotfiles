set $mod Mod4
font pango:monospace 8, FontAwesome 8
floating_modifier $mod
new_window 1pixel

bar 
{
	font pango:FontAwesome 10
	separator_symbol " | "
	position top
	status_command i3status

	colors 
	{
		background #2F333E
		statusline #ffffff
		separator #ffffff

		focused_workspace #2F333E #2F333E #ffffff
		inactive_workspace #2F333E #2F333E #888888
		urgent_workspace #aa0000 #990000 #ffffff
	}

}

mode "resize" 
{
	bindsym Left resize shrink width 5 px or 5 ppt
	bindsym Down resize grow height 5 px or 5 ppt
	bindsym Up resize shrink height 5 px or 5 ppt
	bindsym Right resize grow width 5 px or 5 ppt

	bindsym Escape mode "default"
}


set $w1 "1:  Web"
set $w2 "2:  Term"
set $w3 "3"
set $w4 "4"
set $w5 "5"
set $w6 "6"
set $w7 "7"
set $w8 "8"
set $w9 "9:  Chat"
set $w0 "10:  Music"

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+space focus mode_toggle

bindsym $mod+KP_Enter exec gnome-calculator

bindsym $mod+1 workspace $w1
bindsym $mod+2 workspace $w2
bindsym $mod+3 workspace $w3
bindsym $mod+4 workspace $w4
bindsym $mod+5 workspace $w5
bindsym $mod+6 workspace $w6
bindsym $mod+7 workspace $w7
bindsym $mod+8 workspace $w8
bindsym $mod+9 workspace $w9
bindsym $mod+0 workspace $w0

bindsym $mod+a focus parent
bindsym $mod+d exec dmenu_run
bindsym $mod+e layout toggle split
bindsym $mod+f fullscreen toggle global
bindsym $mod+h split h
bindsym $mod+q kill
bindsym $mod+r mode "resize"
bindsym $mod+v split v
bindsym $mod+w layout tabbed
bindsym $mod+Return exec gnome-terminal

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+Shift+space floating toggle

bindsym $mod+Shift+1 move container to workspace $w1
bindsym $mod+Shift+2 move container to workspace $w2
bindsym $mod+Shift+3 move container to workspace $w3
bindsym $mod+Shift+4 move container to workspace $w4
bindsym $mod+Shift+5 move container to workspace $w5
bindsym $mod+Shift+6 move container to workspace $w6
bindsym $mod+Shift+7 move container to workspace $w7
bindsym $mod+Shift+8 move container to workspace $w8
bindsym $mod+Shift+9 move container to workspace $w9
bindsym $mod+Shift+0 move container to workspace $w0

bindsym $mod+Shift+e exec i3-msg exit
bindsym $mod+Shift+q kill
bindsym $mod+Shift+r restart
bindsym $mod+Shift+s layout stacking
bindsym $mod+Shift+l exec gnome-screensaver-command -l

bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle
bindsym XF86MonBrightnessUp exec "xbacklight -inc 10"
bindsym XF86MonBrightnessDown exec "xbacklight -dec 10"
bindsym XF86KbdBrightnessDown exec "~/.dotfiles/bin/kbbacklight -"
bindsym XF86KbdBrightnessUp exec "~/.dotfiles/bin/kbbacklight +"

client.background #3f4551
client.focused #333333 #ffffff #ffffff

exec_always --no-startup-id compton --config ~/.config/compton/compton.conf -b
exec --no-startup-id nm-applet
exec --no-startup-id feh --bg-fill ~/.config/pepper.jpg
exec --no-startup-id owncloud
exec --no-startup-id xautolock -time 10 -locker "gnome-screensaver-command -l"
exec --no-startup-id redshift
exec --no-startup-id gnome-screensaver

# Wacom configuration, done through this method instead of Xorg config such that
# it can be done in usermode
exec xsetwacom set "Wacom Intuos S Pen stylus" MapToOutput $(xrandr | grep primary | awk '{print $1;}')

